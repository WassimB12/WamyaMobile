    <!-- Title: Post a Publication -->

    <!-- Text View to Post a Publication -->

    <!-- Button to Post -->
    <TextView
        android:id="@+id/publicationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryIcons"
        android:layout_marginTop="43dp"
        android:backgroundTint="#3D10B5"
        android:fontFamily="@font/amaranth_bold"
        android:foregroundTint="#4815C9"
        android:text="Or post a Publication"
        android:textColor="#130140"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/publicationTextView"
        android:layout_width="366dp"
        android:layout_height="86dp"
        android:layout_below="@id/publicationTitle"
        android:layout_marginTop="12dp"
        android:background="@drawable/pill_shape"
        android:hint="  Write your publication here"
        android:textSize="21sp" />

    <Button

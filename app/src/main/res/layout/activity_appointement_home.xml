    <!-- Title: Search for Service Provider -->

    <!-- Search Bar -->
    <TextView
        android:id="@+id/searchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#004815C9"
        android:backgroundTint="#3D10B5"
        android:fontFamily="@font/amaranth_bold"
        android:foregroundTint="#4815C9"
        android:text="Search for Service Provider"
        android:textColor="#130140"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="382dp"
        android:layout_height="48dp"
        android:layout_below="@id/searchTitle"
        android:layout_marginTop="8dp"
        android:background="@drawable/pill_shape"
        android:hint="   Enter search keywords"
        android:textSize="20sp"></EditText>

    <!-- Title: Choose a Category -->

    <!-- Category Icons -->
    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="30dp"
        android:backgroundTint="#3D10B5"
        android:fontFamily="@font/amaranth_bold"
        android:foregroundTint="#4815C9"
        android:text="Or search by Category"
        android:textColor="#130140"
        android:textSize="20sp" />

    <LinearLayout
